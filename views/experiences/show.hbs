<div class="row">
    <div class="col s12 m8">
        <h4>
            {{experience.title}}
            <small>{{{editIcon experience.user user experience._id false}}}</small>
        </h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">
                    {{experience.company}} | {{experience.jobRole}} | {{experience.jobType}} | {{experience.year}}
                </span>
                {{{experience.body}}}
                <span>Posted: {{formatDate date 'Do MMM YYYY'}}</span>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                    {{experience.user.displayName}}
                </span>
                <img src="{{experience.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/experiences/user/{{experience.user._id}}">More Interviews of {{experience.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>